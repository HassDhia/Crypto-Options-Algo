{
  "title": "KPI Ribbon",
  "uid": "kpi-ribbon",
  "tags": ["trading", "metrics"],
  "timezone": "browser",
  "schemaVersion": 37,
  "panels": [
    {
      "id": 1,
      "title": "Edge Capture %",
      "type": "stat",
      "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4},
      "targets": [{
        "expr": "edge_capture_pct",
        "legendFormat": "{{instance}}"
      }],
      "thresholds": {
        "mode": "absolute",
        "steps": [
          { "color": "red", "value": null },
          { "color": "orange", "value": 0.5 },
          { "color": "green", "value": 0.8 }
        ]
      }
    },
    {
      "id": 2,
      "title": "Realised Slippage bp",
      "type": "stat",
      "gridPos": {"x": 6, "y": 0, "w": 6, "h": 4},
      "targets": [{
        "expr": "fill_slip_bp",
        "legendFormat": "{{instance}}"
      }],
      "thresholds": {
        "mode": "absolute",
        "steps": [
          { "color": "green", "value": null },
          { "color": "orange", "value": 5 },
          { "color": "red", "value": 10 }
        ]
      }
    },
    {
      "id": 3,
      "title": "Rolling Sharpe",
      "type": "stat",
      "gridPos": {"x": 12, "y": 0, "w": 6, "h": 4},
      "targets": [{
        "expr": "rate(cum_pnl_usd[1h]) / stddev(cum_pnl_usd[1h])",
        "legendFormat": "{{instance}}"
      }],
      "thresholds": {
        "mode": "absolute",
        "steps": [
          { "color": "red", "value": null },
          { "color": "orange", "value": 1 },
          { "color": "green", "value": 2 }
        ]
      }
    },
    {
      "id": 4,
      "title": "PnL vs Benchmark",
      "type": "stat",
      "gridPos": {"x": 18, "y": 0, "w": 6, "h": 4},
      "targets": [{
        "expr": "cum_pnl_usd - (benchmark_pnl or vector(0))",
        "legendFormat": "{{instance}}"
      }],
      "thresholds": {
        "mode": "absolute",
        "steps": [
          { "color": "red", "value": null },
          { "color": "orange", "value": 0 },
          { "color": "green", "value": 1000 }
        ]
      }
    }
  ]
}
